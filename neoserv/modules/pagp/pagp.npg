//
: MenuGen

   " %0.f" using
   // On sauvegarde la base courante.
   dbselected
   // Ouverture du fichier principal.
   " MODULES\PAGP\PAGP" dbopen
   if
     begin
          FALSE
          cursoroff
          " MODULES\PAGP\PAGARDE.VTX" sendpage
          cursoron

          begin
               FALSE
               20 23 locate
               input csaisie :=
               fkey fksommaire !=
               if
                 csaisie val ThemePa :=
