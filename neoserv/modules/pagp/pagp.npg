//
// ออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออ
//
// Menu des options en dtail
//
: MenuDetQuest

   " MenuDetQuest" display
   begin
      cursoroff
      23 20 locate
      wait
      fkey fksommaire !=

   while

      fkey
      case
          fksuite  of

             // Annonce suivante
             dbeof !
             if

               " ANNONCE" dbsetindex
               1 dbskip
               FiltreService " SERVICE" dbfield alltrim ==
               " BVALIDE" dbfield " +" == &&
               " TYPEPA" dbfield ThemePa == &&
               if
                 AfficheDetQuest

               else
                   -1 dbskip
                   " Dernire annonce" line0

               endif

             else
                 " Dernire annonce" line0

             endif

          endof

          fkretour of

               // Annonce prcdente
               -1 dbskip
               dbbof !
               " ANNONCE" dbsetindex
               FiltreService " SERVICE" dbfield alltrim ==
               " BVALIDE" dbfield " +" == &&
               " TYPEPA"  dbfield ThemePa == &&
               if
                 AfficheDetQuest

               else
                   " Premire annonce" line0

               endif

          endof

          drop

      endcase

   repeat

   cursoron

;


//
// ออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออ
//
// Affichage de la liste des annonces
//
: AfficheListe

   cursoroff
   " MODULES\PAGP\STLISTE.VTX" sendpage
   " MODULES\PAGP\STLSTBAS.VTX" sendpage
   1 nquest :=
   5 nlig :=

   begin
      // On n'affiche que les annonces valides du thme choisi
      // infrieures  3 mois
      // ou pas (si on est en gestion)

      dbeof !
      _DEBUG
      if
        " RESUME" dbfield alltrim display

      endif

      bGestion
      if

         " BVALIDE" dbfield " -" == &&

      else

         " BVALIDE" dbfield " +" == &&
         " TYPEPA"  dbfield ThemePa == &&

      endif

      " DATE" dbfield dtoj _MAXJOUR + date dtos dtoj > &&
      nlig 21 <= &&

   while

      nlig 2 locate black setcolor nquest str "  " 2 padl print
      nlig 6 locate " RESUME" dbfield alltrim 0 35 substr black setcolor print
      1 dbskip
      nquest ++
      nlig ++

   repeat

;


//
// ออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออ
//
// Gestion de options de la liste des annonces
//
: MenuListe

   cursoron
   false bFini :=

   // Menu de la liste
   begin

      bFini !
      if
         23 28 locate
         input csaisie :=
         fkey fksommaire !=
      else
          false

      endif

   while

      csaisie val nchoix :=
      nchoix dup 0 > swap nquest < &&
      if
         // On a saisi un numro
         // SKIP -(nquest-nchoix)
         nquest nchoix - negate
         dbskip
         AfficheDetQuest

         bGestion
         if
           " [1] = Valider   [2] = Supprimer" line0
           wait
           fkey fksommaire !=
           if
             data val empty? !
             if
               data val
               case
                   1 of

                     // ===== { On confirme l'annonce }
                     " +" " BVALIDE" DbReplace
                     " Annonce valide !" line0
                     1000 delay
                     " [1] = Valider   [2] = Supprimer" line0

                   endof

                   2 of

                     // ===== { On supprime l'annonce }
                     Dbdelete
                     " Annonce supprime !" line0
                     1000 delay
                     clear0

                   endof

                  " Choix invalide !" line0
                  drop

               endcase

             else
                 " Choix invalide !" line0

             endif

             // On raffiche la liste
             // (on se repositionne au dbut)
             " VALIDE" dbsetindex
             dbtop
             " -" clepa :=

             clepa dbseek
             if
               " il en reste" display
//             AfficheListe
               AfficheDetQuest
               cursoron

             else
                 " plus d'annonces en attente" line0
                 true bFini :=
                 false bGestion :=

             endif

           else
               true bFini :=
               false bGestion :=

           endif

         else
             MenuDetQuest
             // On raffiche la liste
             // (on se repositionne au dbut)
            " ANNONCE" dbsetindex
            dbtop
            FiltreService "  " 10 padr clepa :=
            ThemePA 10 <
            if
              "  " clepa strcat

            endif

            ThemePa str clepa strcat
            " +" clepa strcat
            clepa dbseek drop
            AfficheListe
            cursoron

         endif

      else
         // Gestion des touches
         fkey
         case

             fksuite  of

                // Page suivante
                // On regarde si on a encore des annonces  afficher
                dbeof !
                bGestion
                if
                  " BVALIDE" dbfield " -" == &&
                else
                  " BVALIDE" dbfield " +" == &&
                endif

                if
                  AfficheListe
                  npage ++

                else
                    " Dernire page" line0

                endif

             endof

             fkretour of

                // Page prcdente
                npage 1 >
                if
                  // SKIP -((nquest-1)+17)
                  nquest 1 - 17 + negate
                  dbskip
                  AfficheListe
                  npage --

                else
                    " Premire page" line0

                endif

             endof

             drop

         endcase

      endif

   repeat

;

//
// ออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออ
//
// Choix Lire / Ecrire d'une PA
//
: PALireEcrire

   cursoroff
   " MODULES\PAGP\LIRECR.VTX" SendPage
   cursoron
   FALSE bGestion :=

   begin
        20 23 locate
        input csaisie :=
        fkey fksommaire !=

   while
        // On regarde si on a saisi le mot-clef de gestion
        csaisie " **SYSOP" ==
        if
          TRUE bGestion ==
          if
            " Dja quelqu'un en sysop" line0

          else
              TRUE bGestion :=
              " MODE GESTIONNAIRE ACTIVE" line0
              beep

              // { On regarde si il y a des annonces en attente de validation. }
              " VALIDE" dbsetindex
              " -" clepa :=

              clepa dbseek
              if
                " Il y a des annonces" line0
                AfficheListe
                MenuListe

                // { On raffiche le menu. }
                cursoroff
                " MODULES\PAGP\LIRECR.VTX" sendpage
                cursoron

              else
                  " Pas d'annonces  valider" line0

              endif

          endif

         else

             csaisie val nchoix :=
             nchoix

             case
                 1 of                             // Lire une annonce

                    // On regarde si il y a au moins une annonce

                    " ANNONCE" dbsetindex
                    FiltreService "  " 10 padr clepa :=
                    ThemePA 10 <
                    if
                      "  " clepa strcat

                    endif

                    ThemePa str clepa strcat
                    " +" clepa strcat
                    clepa dbseek
                    if
                      AfficheListe
                      MenuListe

                      // On raffiche le menu.
                      cursoroff
                      " MODULES\PAGP\LIRECR.VTX" sendpage
                      cursoron

                    else
                        " Pas d'annonces pour l'instant" line0

                    endif

                 endof

               2 of                             // Ecrire une annonce
                   " ANNONCE" dbsetindex
                   " MODULES\PAGP\PAEXPL.VTX" SendPage
                   wait
                   fkey fksommaire !=
                   if
                     InitSaisie

                   endif

                    // On raffiche le menu.
                    cursoroff
                    " MODULES\PAGP\LIRECR.VTX" sendpage
                    cursoron

               endof

               drop

               " Choix incorrect" line0

            endcase

         endif

      repeat

;


