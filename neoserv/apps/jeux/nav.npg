//
// { Rgles du jeu }
//
: NavRegles

	cls
	" Navreg1.vtx" SendPage
	TRUE go_on :=
	0 clavier :=

	Begin
	  go_on TRUE ==
	While
		clavier

		case
			1 of		// Sommaire

				FALSE go_on :=

			endof

			3 of		// Retour

				FALSE go_on :=

			endof

			7 of		// Suite

				NavRegle2
				" Navreg1.vtx" SendPage

			endof

		drop

		endcase

	Repeat

	TRUE go_on :=

;

: menu

	" Navmenu.vtx" sendpage
	2000 delay
	TRUE go_on :=
	0 clavier :=
	1 cpt :=
	cpt 3 * 12 + 9 locate " *" print
	AffectTouches

	Begin
	  go_on TRUE ==
	While
		clavier
		case
			1 of  // quitter

			     false go_on :=
			     3 cpt :=

			endof

			3 of // retour

				0 clavier :=
				cpt 3 * 12 + 9 locate "  " print

				cpt 0 >
				if
					cpt --
				else
					2 cpt :=
				endif

				cpt 3 * 12 + 9 locate " *" print
			
			endof

			7 of // suite

				0 clavier :=
				cpt 3 * 12 + 9 locate "  " print

				cpt 2 <
				if
					cpt ++
				else
					0 cpt :=
				endif

				cpt 3 * 12 + 9 locate " *" print

			endof

			8 of // envoi
				// cpt str line0

				0 clavier :=
				cpt

				case

					0 of  // rgles

						Navregles
						0 cpt :=

					endof

					1 of  // Jeu

						Run
						0 cpt :=
                 AffectTouches

					endof

           	2 of  // quitter

			        false go_on :=
			        0 cpt :=

			        endof
					drop

				endcase

				cpt 2 !=

				if
					" NavMenu.vtx" sendpage
					2 cpt :=
					cpt 3 * 12 + 9 locate " *" print

				endif

			endof
		   drop

		endcase

     
	repeat
;

