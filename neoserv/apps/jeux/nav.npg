//
// Boucle Principale
//
: Run

	EmptyLocalFkeyTable
	InitTab

	// Affichage de l'cran de jeu
	AffCadre
	2 8 LOCATE
        Balgp.pseudo PRINT
	2 28 LOCATE
	CompuNom PRINT

	// Positionnement des bateaux sur les grilles
	" je calcule votre grille ..." line0
	Nav1::CalcFlotte1
	" je calcule ma grille ..." line0
	Nav2::CalcFlotte2

	// Affichage de la grille du joueur 1
	" j'affiche votre grille ..." line0
	Nav1::AffFlotte1

	_debug
	if
		Nav2::AffFlotte2

	endif

        clear0

	// Dbut du jeu
	begin
		// Joueur 1

		0 Sortie :=
		Jeu

		// Analyse des touches de fonction

		2 Res ==
		if
			2 Sortie :=
		else
			AffJeu1

			// Computer
			Jeu2
			AffJeu2

		endif

	sortie until

        drop
;

