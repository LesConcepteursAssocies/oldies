// ออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออ
//
// Boucle du jeu
//
: Jeu

	0 Sortie :=
	Tour ++
	9 19 LOCATE
	1 setcolor
	" Tour" PRINT
	10 18 LOCATE
	" numro" PRINT
	11 20 LOCATE
     " %.0f" USING
	Tour print
	CURSORON

	// Saisie des abcisses (A ... J)
	BEGIN
		0 Res :=
		19 7 locate
		"                  " print
		19 7 locate
		INPUT Xval :=
		// Appui sur sommaire ?
		Fkey FKSOMMAIRE ==
		if
			2 Res :=
		else
			Xval ASC
			Nav0.Xplay :=
			64 Nav0.Xplay -=

			Nav0.Xplay 0 >
			if
				Nav0.Xplay 11 < 
				if
					// La saisie est OK
					1 Res :=
				endif
			endif

			0 Res ==
			if

				// Mauvaise saisie
				" Erreur de saisie" LINE0
				wait
                                clear0

			endif

		endif
		
	Res UNTIL

	// Saisie des ordonnes (1 ... 10)

	2 Res !=
	if
		BEGIN
			0 Res :=
			19 9 locate
			"             " print
			19 9 locate
			INPUT VAL Nav0.Yplay :=
			Fkey FKSOMMAIRE ==
			if
				2 Res :=
			else
				Nav0.Yplay 0 >
				if
					Nav0.Yplay 11 < 
					if
						// La saisie est OK
						1 Res :=
					endif
				endif

				0 Res ==
				if

					// Mauvaise saisie
					" Erreur de saisie" LINE0
				endif

			endif

		Res UNTIL

	endif

	cursoroff

;

// ออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออ
//
// Affichage des coordonnes saisie
//
: AffJeu1

	Nav0.Yplay Nav0.YC2 + Nav0.Xplay Nav0.XC2 + LOCATE

	// On vrifie si un bateau a t touch

	Nav0.Xplay Nav0.Yplay Nav0.Tab2 Xval :=
	Xval " 0" !=
	if
		Xval " 1" !=
		if
			" Touch" Msg :=
			1 setcolor
			Xval print
			Xval " 2" ==
			if
				" Sous-marin coul !!!     " Msg :=
			endif

			Xval " 3" ==
			if
				" Destroyer touch !!!     " Msg :=
			endif

			Xval " 4" ==
			if
				" Croiseur touch !!!      " Msg :=
			endif

			Xval " 5" ==
			if
				" Porte-avion touch !!!   " Msg :=
			endif

			Nav2::Touche
		else
			1 setcolor
			" o" print
			" Manqu                   " Msg :=

		endif
	else
		" o" print
		" Manqu                   " Msg :=
	endif

	1 2 locate Msg print

;

// ออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออ
//
// { Choix de l'ordinateur }
//
: Jeu2

	// Calcul des abcisses
	BEGIN
		10 Nav0.Xrange :=
		10 Nav0.Yrange :=
		Nav0::Hasard
		// Les coordonnes choisies n'ont elles pas dja t essayes ???
		" " Nav0.yy Nav0.xx Computer ==
		if
			// On affiche les coordonnes
			Nav0.xx ii :=
			64 ii += 
			ii CHR Xval :=
			19 30 LOCATE
			"            " PRINT
			19 30 LOCATE
			Xval PRINT
			"  " PRINT
			Nav0.yy PRINT

			// On regarde si on a touch quelque chose ..
			1 Res :=
			Nav0.yy Nav0.YC1 + Nav0.xx Nav0.XC1 + LOCATE
			" 0" Nav0.yy Nav0.xx Nav0.Tab1 !=
			if
				" 1" Nav0.yy Nav0.xx Nav0.Tab1 !=
				if
					// On a touch Kekchose ...
					" X" print
					0 Res :=
				endif
			endif
			Res
			if
				" o" print
			endif

			1 Res :=
		
		else
			0 Res :=
		
		endif

	Res UNTIL
;

// ออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออ
