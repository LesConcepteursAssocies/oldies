//
// Affectation des coordonn‚es du sous-marin (1 case)
//
: CalcSm1

	// Calcul des coordonn‚es possibles X Y possibles en fonction de la taille
	// du bateau

	10 Nav0.Xrange :=
	10 Nav0.Yrange :=

	Nav0::Hasard
	1 Nav0.Res :=

	// On v‚rifie que le coordonn‚es choisies sont libres
	Nav0.yy Nav0.xx Nav0.Tab1 " 0" ==
	if
		" 2" Nav0.yy Nav0.xx Nav0.Tab1 :=
		// Case environnantes
		Nav0.yy PosY :=
		Nav0.xx PosX :=
		AffectContour

	else
		0 Nav0.Res :=

	endif

;

// 
// Calcul de la position des bateaux du joueur 1 sur la grille
//
: CalcFlotte1

	// Porte-Avion

	CalcPa1
	
	// Croiseur

	2 0
	DO
		BEGIN
			CalcCr1
			Nav0.Res
		UNTIL
	LOOP

	// Destroyer

	3 0 
	DO
		BEGIN
			CalcDe1
			Nav0.Res
		UNTIL
	LOOP

	// Sous-marin

	4 0
	DO
		BEGIN
			CalcSm1
			Nav0.Res
		UNTIL
	LOOP

;

//
// Affichage de la grille du joueur1
//
: AffFlotte1

	1 Nav0.jj :=
	0 Nav0.cpt1 :=

	10 0
	do
		0 Nav0.cpt2 :=
		Nav0.cpt1 ++
		Nav0.cpt1 Nav0.ii :=
		Nav0.XC1 Nav0.ii +=

		10 0
		do
			1 Nav0.cpt2 += 
			Nav0.cpt2 Nav0.jj :=
			Nav0.YC1 Nav0.jj +=
			Nav0.cpt1 Nav0.cpt2 Nav0.Tab1 " 0" !=

			if
				Nav0.cpt1 Nav0.cpt2 Nav0.Tab1 " 1" !=
				if
					Nav0.ii Nav0.jj locate
					Nav0.cpt1 Nav0.cpt2 Nav0.Tab1 print
				endif

			endif

		loop

	loop
;

