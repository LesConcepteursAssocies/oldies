#use Nav0

LOCAL
	NUMBER PosX PosY

: AffectContour

	// X + 1 ; Y
	PosX ++
	PosX 11 <
	if
		PosY PosX Nav0.Tab1 " 0" ==
		if
			" 1" PosY PosX Nav0.Tab1 :=
		endif
	endif

	// X ; Y + 1
	PosX --
	PosY ++
	PosY 11 <
	if
		PosY PosX Nav0.Tab1 " 0" ==
		if
			" 1" PosY PosX Nav0.Tab1 :=
		endif
	endif

	// X - 1 ; Y
	PosX --
	PosY --
	PosX 0 >
	if
		PosY PosX Nav0.Tab1 " 0" ==
		if
			" 1" PosY PosX Nav0.Tab1 :=
		endif
	endif

	// X ; Y - 1
	PosX ++
	PosY --
	PosY 0 >
	if
		PosY PosX Nav0.Tab1 " 0" ==
		if
			" 1" PosY PosX Nav0.Tab1 :=
		endif
	endif
;

//
// Affectation des coordonn‚es du porte avion (4 cases)
//
: CalcPa1

	// Calcul des coordonn‚es possibles X Y possibles en fonction de la taille
	// du bateau

	2 rnd Nav0.ii :=
	Nav0.ii
	if
		10 Nav0.Xrange :=
		Nav0.TaillePa Nav0.Xrange -=
		Nav0.Xrange ++
		10 Nav0.Yrange :=

	else
		10 Nav0.Xrange :=
		10 Nav0.Yrange :=
		Nav0.TaillePa Nav0.Yrange -=
		Nav0.Yrange ++

	endif
	
	Nav0::Hasard

	" 5" Nav0.yy Nav0.xx Nav0.Tab1 :=

	Nav0.ii 
	if
		Nav0.xx Nav0.ii :=
		" 5" Nav0.yy Nav0.ii Nav0.Tab1 :=
		// Case environnantes
		Nav0.yy PosY :=
		Nav0.ii PosX :=
		AffectContour

		3 0 
		do
			Nav0.ii ++
			" 5" Nav0.yy Nav0.ii Nav0.Tab1 :=
			Nav0.yy PosY :=
			Nav0.ii PosX :=
			AffectContour
		loop

	else

		Nav0.yy Nav0.ii :=
		" 5" Nav0.ii Nav0.xx Nav0.Tab1 :=
		// Case environnantes
		Nav0.ii PosY :=
		Nav0.xx PosX :=
		AffectContour

		3 0 
		do
			Nav0.ii ++
			" 5" Nav0.ii Nav0.xx Nav0.Tab1 :=
			// Case environnantes
			Nav0.ii PosY :=
			Nav0.xx PosX :=
			AffectContour

		loop

	endif
;

//
// Affectation des coordonn‚es du croiseur (3 cases)
//
: CalcCr1

	// Calcul des coordonn‚es possibles X Y possibles en fonction de la taille
	// du bateau

	2 rnd Nav0.ii :=
	Nav0.ii
	if
		10 Nav0.Xrange :=
		Nav0.TailleCr Nav0.Xrange -=
		Nav0.Xrange ++
		10 Nav0.Yrange :=

	else
		10 Nav0.Xrange :=
		10 Nav0.Yrange :=
		Nav0.TailleCr Nav0.Yrange -=
		Nav0.Yrange ++

	endif
	
	Nav0::Hasard

	// On v‚rifie que le coordonn‚es choisies sont libres
	1 Nav0.Res :=

	Nav0.yy Nav0.xx Nav0.Tab1 " 0" !=
	if
		0 Nav0.Res :=
	endif

	Nav0.ii
	if
		Nav0.xx Nav0.jj :=
		Nav0.jj ++
		Nav0.yy Nav0.jj Nav0.Tab1 " 0" !=
		if
			0 Nav0.Res :=
		endif
		Nav0.jj ++
		Nav0.yy Nav0.jj Nav0.Tab1 " 0" !=
		if
			0 Nav0.Res :=
		endif
	else
		Nav0.yy Nav0.jj :=
		Nav0.jj ++
		Nav0.jj Nav0.xx Nav0.Tab1 " 0" !=
		if
			0 Nav0.Res :=
		endif
		
		Nav0.jj ++
		Nav0.jj Nav0.xx Nav0.Tab1 " 0" !=
		if
			0 Nav0.Res :=
		endif
	endif

	// On affecte les coordonn‚es si les coordonn‚es sont libres

	1 Nav0.Res ==
	if
		" 4" Nav0.yy Nav0.xx Nav0.Tab1 :=

		Nav0.ii 
		if
			Nav0.xx Nav0.ii :=
			" 4" Nav0.yy Nav0.ii Nav0.Tab1 :=
			// Case environnantes
			Nav0.yy PosY :=
			Nav0.ii PosX :=
			AffectContour

			2 0 
			do
				Nav0.ii ++
				" 4" Nav0.yy Nav0.ii Nav0.Tab1 :=
				// Case environnantes
				Nav0.yy PosY :=
				Nav0.ii PosX :=
				AffectContour
			loop

		else

			Nav0.yy Nav0.ii :=
			" 4" Nav0.ii Nav0.xx Nav0.Tab1 :=
			// Case environnantes
			Nav0.ii PosY :=
			Nav0.xx PosX :=
			AffectContour

			2 0 
			do
				Nav0.ii ++
				" 4" Nav0.ii Nav0.xx Nav0.Tab1 :=
				// Case environnantes
				Nav0.ii PosY :=
				Nav0.xx PosX :=
				AffectContour
			loop

		endif

	endif
;

